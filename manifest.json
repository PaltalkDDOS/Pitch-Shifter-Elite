{
    "manifest_version": 3,
    "name": "Pitch Shifter Pro - HTML5 Video Audio FX",
    "short_name": "Pitch Shifter Pro",
    "version": "2.0.1",
    "description": "Elevate your HTML5 video and audio with advanced pitch shifting, AI-driven EQ, real-time BPM detection, and immersive spatial audio. Ideal for music enthusiasts, karaoke fans, and content creators.",
    "author": "VN (paltalk)",
    "icons": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
    },
    "action": {
        "default_icon": {
            "16": "icon16.png",
            "48": "icon48.png",
            "128": "icon128.png"
        },
        "default_popup": "controls.html"
    },
    "permissions": [
        "activeTab",
        "storage",
		"identity",
        "downloads",
        "tabs",
        "scripting",
        "webRequest",
        "unlimitedStorage",
        "clipboardWrite",
        "alarms"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "*://*.youtube.com/*",
                "*://*.vimeo.com/*",
                "*://*.soundcloud.com/*",
                "*://*.facebook.com/*",
                "*://*.dailymotion.com/*",
                "*://*.twitch.tv/*"
            ],
            "js": [
                "jungle.js",
                "content.js"
            ],
            "run_at": "document_end"
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "jungle.js",
                "content.js",
                "controls.html",
                "controls.css",
                "controls.js",
                "bg.jpg",
                "bg-light.png",
                "icon16.png",
                "icon48.png",
                "icon48_disabled.png",
                "icon128.png",
                "audioWorker.js",
                "cla3aProcessor.js",
                "activation.json"
            ],
            "matches": ["*://*/*"]
        }
    ],
    "content_security_policy": {
        "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'; worker-src 'self'; connect-src 'self' blob: https://fonts.googleapis.com https://fonts.gstatic.com https://script.google.com https://script.googleusercontent.com https://www.cloudflare.com/cdn-cgi/trace https://cloudflare.com https://worldtimeapi.org/api/timezone/Etc/UTC https://www.youtube.com https://api.github.com http://worldclockapi.com/api/json/utc/now https://www.amazon.com https://time.google.com https://www.google.com https://worldtimeapi.org;",
        "sandbox": "sandbox allow-scripts; script-src 'self'"
    },
    "minimum_chrome_version": "102",
    "options_ui": {
        "page": "controls.html",
        "open_in_tab": true
    },
    "sandbox": {
        "pages": [
            "sandbox/sandbox.html"
        ]
    },
    "host_permissions": [
        "*://*/*"
    ],
    "commands": {
        "toggle-pitch-shifter": {
            "suggested_key": {
                "default": "Ctrl+Shift+P",
                "mac": "Command+Shift+P"
            },
            "description": "Bật/tắt Pitch Shifter Pro"
        }
    }
}